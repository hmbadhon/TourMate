<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorbg"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mainbody">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alertitleTV"
            android:text="Add Test"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/coloryollow"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wallettitleET"
            android:drawableLeft="@drawable/cmnt"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/coloryollow"
            android:padding="10dp"
            android:textStyle="bold"
            android:hint="Title"
            android:textSize="20sp"
            android:gravity="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/walletamountET"
            android:drawableLeft="@drawable/money"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:background="@color/coloryollow"
            android:padding="10dp"
            android:textStyle="bold"
            android:hint="Amount"
            android:textSize="20sp"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/mainbody">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:id="@+id/alertCancelbtn"
            android:textColor="@color/colorwhite"
            android:background="@color/colorred" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="@string/save"
            android:id="@+id/alertSavebtn"
            android:textColor="@color/colorwhite"
            android:background="@color/colorgreen" />

    </LinearLayout>

</RelativeLayout>